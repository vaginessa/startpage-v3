doctype html
html(lang='en')
  head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(type='text/css' rel='stylesheet' href='css/main.css')
    title Start

  body
    // TODO: these should be JS objects
    .contentContainer
      .infoContain
        .card(class='weather')
          .overlay
          .content
            #location
            #weatherIcon
            #weather
        .search
          form(method='get', action='http://www.google.com/search')
            input(type='text' name='q' autocomplete='off' placeholder='Search Google')
          form(method='get', action='http://www.imdb.com/find')
            input(type='text' name='q' autocomplete='off' placeholder='Search IMDB')
          form(method='get', action='http://www.youtube.com/results')
            input(type='text' name='q' autocomplete='off' placeholder='Search YouTube')
      .separator
      each val in ['https://amazon.com','https://chase.com','http://codepen.io','http://github.com','http://developers.google.com','http://groupon.com','http://jackthreads.com','http://linkedin.com','https://mint.com','http://reddit.com','http://sitepoint.com','https://simple.com','http://soundcloud.com','http://wwwhere.io','http://youtube.com','https://web-development.zeef.com/eduardo.bilk']
          .card
            a(href=val)
            .logo

script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js')
script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery.simpleWeather/3.1.0/jquery.simpleWeather.min.js')
script(type='text/javascript', src='js/weather.js')

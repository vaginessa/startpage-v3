doctype html
html(lang='en')
  head
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='icon' href='data:;base64,iVBORw0KGgo=')
    link(type='text/css' rel='stylesheet' href='css/main.css')
    title Start

  body(ng-app='startpage')
    div(class='contentContainer', ng-controller='mainController')
      .infoContain
        .card(class='weather')
          .overlay
          .content
            #location
            #weatherIcon
            #weather
        .search
          form(method='get', action='http://www.google.com/search')
            input(type='text' name='q' autocomplete='off' placeholder='Search Google' autofocus)
          form(method='get', action='http://www.imdb.com/find')
            input(type='text' name='q' autocomplete='off' placeholder='Search IMDB')
          form(method='get', action='http://www.youtube.com/results')
            input(type='text' name='q' autocomplete='off' placeholder='Search YouTube')
      .separator
      div(class='card', ng-repeat='card in cards')
        a(ng-href='{{card.url}}')
        div(class='logo', ng-style="{'background': 'url({{card.image}}) center center no-repeat', 'background-size': 'contain'}")

script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js')
script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery.simpleWeather/3.1.0/jquery.simpleWeather.min.js')
script(type='text/javascript', src='js/weather.js')

// Angular
script(type='text/javascript', src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.5/angular.min.js')
script(type='text/javascript', src='js/app.js')
script(type='text/javascript', src='js/controllers/mainController.js')
